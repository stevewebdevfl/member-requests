<!-- app/views/gprequests/rank.html.erb -->

<div class="container">
  <div class="rank_page">
    <h2>
      Requests by Votes
    </h2>
    <div class="session_info">
      <%= "Email: #{session[:email]} User ID: #{session[:user_id]}" %>
    </div>
    <br></br>
    <% if @gprequests.count > 0 %>
      <% @gprequest_rank.each do |request| %>
        <% request_id = request[0] %>
        <% gprequest = Gprequest.find(request_id) %>
        <%= "(id:#{request_id}) | title:  '#{gprequest.title}' | descr:  '#{gprequest.description}' | votes: #{request[1]}" %>
        <br></br>
      <% end %>
    <% else %>
      <div class="no_open_req">
        <%= "There are no open requests" %>
      </div>
    <% end %>
  </div>
</div>
