<!-- app/views/sessions/new.html.erb -->

  <div class="login-page">
    <h2>
      Sign In
    </h2>

    <div id="flash-messages">
      <% flash.each do |key, value| %>
        <%= content_tag(:div, value, :class => "flash #{key}") %>
      <% end %>
    </div>
    
    <div class="login">
    <%= form_tag login_path %>
      <%= label_tag :email %>
      <%= text_field_tag :email %>

      <%= label_tag :password %>
      <%= password_field_tag :password %>

      <%= submit_tag "Log in" %>
    </div>
    
  </div>