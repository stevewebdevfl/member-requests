<!-- app/views/sessions/new.html.erb -->

  <div class="login-page">
    <h2>Sign In</h2>
    
    <div id="password-credentials">
      <p>
        <%= label_tag :email %>
        <%= email_field_tag :email, :autofocus => true %>
      </p>
      <p>
        <%= label_tag :password %>
        <%= password_field_tag :password %>
      </p>
    </div>

    <p>
      <%= submit_tag "Sign In" %>
    </p>

  </div>